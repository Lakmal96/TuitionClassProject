@model TuitionClassProject.ViewModels.StudentFormViewModel

@{
    ViewBag.Title = "StudentForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Student</h2>

@using (Html.BeginForm("Save", "Students"))
{
    @Html.HiddenFor(m => m.Student.Id)
    <div class="form-group">
        @Html.LabelFor(m => m.Student.Name)
        @Html.TextBoxFor(m => m.Student.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Student.IndexNumber)
        @Html.TextBoxFor(m => m.Student.IndexNumber, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Student.Email)
        @Html.TextBoxFor(m => m.Student.Email, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Student.ContactNumber)
        @Html.TextBoxFor(m => m.Student.ContactNumber, new { @class = "form-control" })
    </div>


    <div class="form-group">
        @Html.LabelFor(m => m.Student.CategoryId)
        @Html.DropDownListFor(m => m.Student.CategoryId, new SelectList(Model.Categories, "Id", "Name"), "Select a Path", new { @class = "form-control" })
    </div>

    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.Student.IsActive) Is Active?
        </label>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
}

